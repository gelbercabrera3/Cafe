<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gelber.lab_1.Factura">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Detalle de compra"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pedido"
        android:id="@+id/textView3"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/btn_regresar"
        android:layout_toStartOf="@+id/btn_regresar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total"
        android:id="@+id/textView4"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pedido"
        android:id="@+id/txt_pedido"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_above="@+id/textView4"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total"
        android:id="@+id/txt_total"
        android:layout_above="@+id/btn_regresar"
        android:layout_alignLeft="@+id/txt_pedido"
        android:layout_alignStart="@+id/txt_pedido" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:id="@+id/btn_regresar"
        android:layout_below="@+id/textView4"
        android:layout_toLeftOf="@+id/txt_total"
        android:layout_toStartOf="@+id/txt_total"
        android:layout_marginTop="65dp" />

</RelativeLayout>
